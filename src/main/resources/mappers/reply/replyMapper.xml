<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.springMVC.mappers.reply.ReplyMapper">

    <!-- 게시글 resultMap -->
    <resultMap id="ArticleResultMap" type="ArticleVO">
        <id property="articleNo" column="article_no"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="writer" column="writer"/>
        <result property="regDate" column="regdate"/>
        <result property="viewCnt" column="viewcnt"/>
    </resultMap>

    <!-- 댓글 resultMap -->
    <resultMap id="ReplyResultMap" type="ReplyVO">
        <id property="replyNo" column="reply_no"/>
        <result property="ArticleNo" column="article_no"/>
        <result property="replyText" column="reply_text"/>
        <result property="replyWriter" column="reply_writer"/>
        <result property="regDate" column="reg_date"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <!-- 댓글 목록 -->
    <select id="list" resultMap="ReplyResultMap">
        SELECT
               reply_no
             , article_no
             , reply_text
             , reply_writer
             , reg_date
             , update_date
          FROM tbl_reply
         WHERE article_no = #{articleNo}
         ORDER BY reply_no DESC
    </select>

    <!-- 댓글 등록 -->
    <insert id="create">
        INSERT INTO tbl_reply
                  ( article_no
                  , reply_text
                  , reply_writer
                  )
             VALUES
                  ( #{articleNo}
                  , #{replyText}
                  , #{replyWriter}
                  )
    </insert>

    <!-- 댓글 수정 -->
    <update id="update">
        UPDATE tbl_reply
           SET
               reply_text = #{replyText}
             , update_date = NOW()
         WHERE reply_no = #{replyNo}
    </update>

    <!-- 댓글 삭제 -->
    <delete id="delete">
        DELETE FROM tbl_reply
              WHERE reply_no = #{replyNo}
    </delete>

    <!-- 댓글 페이징 목록  -->
    <select id="listPaging" resultMap="ReplyResultMap">
        SELECT
               reply_no
             , article_no
             , reply_text
             , reply_writer
             , reg_date
             , update_date
          FROM tbl_reply
         WHERE article_no = #{articleNo}
         ORDER BY reply_no DESC
         LIMIT #{criteria.pageStart}
             , #{criteria.perPageNum}
    </select>

    <!-- 댓글 페이징 카운팅 -->
    <select id="countReplies" resultType="int">
        SELECT
               COUNT(article_no)
          FROM tbl_reply
         WHERE article_no = #{articleNo}
    </select>

</mapper>